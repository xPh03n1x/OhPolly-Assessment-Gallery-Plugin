<?xml version="1.0"?>
<config>
	<tabs>
		<ohpolly translate="label" module="quickshop">
			<label>OhPolly</label>
			<sort_order>0</sort_order>
		</ohpolly>
	</tabs>
	<sections>
		<quickshop translate="label" module="quickshop">
			<label>QuickShop Module</label>
			<tab>ohpolly</tab>
			<frontend_type>text</frontend_type>
			<sort_order>0</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>0</show_in_store>
			<groups>
				<additional translate="label">
					<label>Additional</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<optech translate="label">
							<label>Data Storage</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_quickshopdatastorage</source_model>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>How should the module operate? MySQL is the standard but for better performance you can store the data in JSON and utilize browsers' localStorage.</comment>
						</optech>
					</fields>
				</additional>
				<display translate="label"> 
					<label>Display Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>0</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<row_items translate="label">
							<label>Items Per Row</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_quickshoprowitems</source_model>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Please select the amount of images you want to be rendered per row</comment>
						</row_items>
						<page_items translate="label">
							<label>Items Per Page</label>
							<frontend_type>text</frontend_type>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>How many images should be rendered per page</comment>
						</page_items>
					</fields>
				</display>
			</groups>
		</quickshop>
	</sections>
</config>